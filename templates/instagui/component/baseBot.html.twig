{% block top %}
<div class="container">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-header d-flex align-items-center ">
                    <div class="col-6">   
                    <h4 class="float-left">{{ bot }} bot </h4>
                    </div>
                    <div class="col-2">
                    <input type="checkbox" id="{{ bot }}" name="toggle-event" class="justify-content-end" data-onstyle="success" checked data-toggle="toggle" onchange="run_bot(this)">
                    
                    </div>
                    
                     <div class="col-3">
                     <ul class="nav nav-tabs" id="tab-{{bot}}" role="tablist">
                        <li class="nav-item">
                        <a class="nav-link active" id="config-tab-{{bot}}" data-toggle="tab" href="#config-{{bot}}" role="tab" aria-controls="config-{{bot}}" aria-selected="true"><span class="fa fa-gear"></span></a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" id="slots-tab-{{bot}}" data-toggle="tab" href="#slots-{{bot}}" role="tab" aria-controls="slots-{{bot}}" aria-selected="false"><span class="fa fa-clock-o"></span></a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" id="news-tab-{{bot}}" data-toggle="tab" href="#news-{{bot}}" role="tab" aria-controls="news-{{bot}}" aria-selected="false"><span class="fa fa-newspaper"></span></a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" id="help-tab-{{bot}}" data-toggle="tab" href="#help-{{bot}}" role="tab" aria-controls="help-{{bot}}" aria-selected="false"><span class="fa fa-question-circle"></span></a>
                        </li>
                     </ul>
                    </div>
                    <a data-toggle="collapse" href="#collapse-{{ bot }}" aria-expanded="false" aria-controls="collapse-{{ bot }}" id="{{ bot }}" >
                       <i class="fa fa-chevron-down pull-right"></i>  
                    </a>       
                </div>
                <div id="collapse-{{ bot }}" class="collapse show card-body" aria-labelledby="{{ bot }}" > 
                    <div class="tab-content" id="myTabContent">
                      <div class="tab-pane fade show active" id="config-{{bot}}" role="tabpanel" aria-labelledby="config-tab-{{bot}}">
                      <div class="card-header">
                        <h4>Paramétrage</h4>
                       {% endblock %}
                       {% block config %} {% endblock %}
                       {% block bottom %}
                       </div> 
                      </div>
                      <div class="tab-pane fade" id="slots-{{bot}}" role="tabpanel" aria-labelledby="slots-tab-{{bot}}">
                      
                                  <div class="col-lg-12">
