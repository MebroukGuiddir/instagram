                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr>
                                      {% for i in 0..11 %}
                                      <th><button id="{{ i }}" data-toggle="modal" data-target="#exampleModal" class="btn {{i%2==1? "btn btn-basic" :"btn btn-primary" }}"></th>
                                      {% endfor %}
                                    </tr>
                                  </tbody>
                                </table>
                              </div>
                            <div class="table-responsive">
                                <table class="table">
                                  <thead>
                                    <tr>
                                       {% for i in 11..23 %}
