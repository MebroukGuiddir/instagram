                                      {% endfor %}
                                    </tr>
                                  </tbody>
                                </table>
                              </div> 
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="tab-pane fade" id="news-{{bot}}" role="tabpanel" aria-labelledby="news-tab-{{bot}}">
                        
