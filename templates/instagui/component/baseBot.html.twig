                            <div class="card-header row">
                              <h4 class="col-10">Créneaux</h4>
                            </div>
                            <div class="card-body">
                              <div class="table-responsive">
                                <table class="table">
                                  <thead>
                                    <tr>
                                     {% for i in 0..11 %}
                                      <th>{{ i|length == 1 ? 0 }}{{i}}:00 {{ i|length == 1 ? 0 }}{{ i +1 }}:00 </th>
